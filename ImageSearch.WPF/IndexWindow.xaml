<Window x:Class="ImageSearch.WPF.IndexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSearch.WPF"
        mc:Ignorable="d"
        Title="IndexWindows" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid DataContext="{Binding SelectedItem, ElementName=IndexList}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
                
        <ListBox Name="IndexList" Grid.Row="0" Margin="10" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FFFFFF" BorderThickness="1" BorderBrush="CadetBlue">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label Content="{Binding Path=Key}" FontWeight="Bold" ToolTip="{Binding Path=Key}"></Label>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GridSplitter Grid.Row="1" Height="4" VerticalAlignment="Center" HorizontalAlignment="Stretch"></GridSplitter>

        <TextBlock Grid.Row="2" Text="{Binding Key}"></TextBlock>
    </Grid>
</Window>
